<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>SawSelfInMirror</defName>
    <thoughtClass>TatesTinyFurnitureMod.MirrorThought</thoughtClass>
    <workerClass>TatesTinyFurnitureMod.ThoughtWorker_Mirror</workerClass>
    <stackLimit>1</stackLimit>
    <stages>

      <!-- default (0) -->
      <li>
        <label>saw self in mirror</label>
        <description>Hey there, good lookin'!</description>
        <baseMoodEffect>+1</baseMoodEffect>
      </li>

      <!-- mildly annoyed (-1) -->
      <li>
        <label>saw self in mirror</label>
        <description>I'm alright-looking, but something's not right...</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>

      <!-- unhappy (-2) -->
      <li>
        <label>saw self in mirror</label>
        <description>My face sure has seen better days...</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>

      <!-- miserable (-3) -->
      <li>
        <label>saw self in mirror</label>
        <description>Yeah, I'm pretty... pretty ugly.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>

      <!-- repulsive (-4) -->
      <li>
        <label>saw self in mirror</label>
        <description>Wow, I'm actually repulsive.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>

      <!-- repulsive (-5) -->
      <li>
        <label>saw self in mirror</label>
        <description>I sure wish I didn't have eyes right about now.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>

      <!-- repulsive (-6) -->
      <li>
        <label>saw self in mirror</label>
        <description>Why do we have mirrors in this place again?!</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>

      <!-- pretty (+1) -->
      <li>
        <label>saw self in mirror</label>
        <description>I look great today!</description>
        <baseMoodEffect>+2</baseMoodEffect>
      </li>

      <!-- beautiful (+2) -->
      <li>
        <label>saw self in mirror</label>
        <description>All shall gaze upon my beauty!</description>
        <baseMoodEffect>+4</baseMoodEffect>
      </li>

    </stages>
  </ThoughtDef>
</Defs>
